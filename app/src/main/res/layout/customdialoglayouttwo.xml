<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_marginRight="@dimen/dp_20"
    android:gravity="center">


    <TextView
        android:id="@+id/dialog_prompt_content_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@drawable/bg_btn_confirm"
        android:gravity="center"
        android:text="【0】 办公室001"
        android:textColor="@color/color_FF9900"
        android:textSize="@dimen/dp_18" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_110"
        android:layout_below="@id/dialog_prompt_content_tv"
        android:background="@drawable/bg_room"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView

            android:id="@+id/tv_loading_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="现在请扫描"
            android:textColor="@color/color_FF9900"
            android:textSize="@dimen/dp_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/tv_loadingmsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="【房间RFID标识】"
                android:textColor="@color/color_FF9900"
                android:textSize="@dimen/dp_18" />

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/avi"
                style="@style/SpinKitView.ThreeBounce"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_25"
                app:SpinKit_Color="@color/color_FF9900" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>